

<section id="content" class="body">
            <div id="register-container">
                <h2 class="welcome">Sign in (or <%= link_to "Create Account", :action => :register %>)</h2>
                <% if flash[:notice] %>
                    <%= flash[:notice] %>
                <% end %>
                <div id="splash">
                    <%= image_tag("/res/backpacking1.jpeg", :alt => "backpack", :id => "splash_img") %>

                     <%= form_tag("post_login", :method => "post") do %> 
                <p><%= label_tag(:text_val, "Enter your email:", :class => "prompt") %> 
                <%= text_field_tag(:text_val) %></p>

                <p><%= label_tag(:text_val, "Enter your password:", :class => "prompt") %> 
                <%= password_field_tag(:password) %></p>
                <%= submit_tag("Submit") %>
                <% end %>


                </div>

                

                

               
            </div>
        </section><!-- /#content --> 