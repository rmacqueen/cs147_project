

<section id="content" class="body">
            <div id="register-container">
                <div id="splash">
                	<%= image_tag("/res/backpacking1.jpeg", :alt => "backpack", :id => "splash_img") %>
                </div>

                <% if flash[:notice] %>
                    <%= flash[:notice] %>
                <% end %>

                <h2>Sign in (or <%= link_to "Create Account", :action => :register %>)</h2>

                <%= form_tag("post_login", :method => "post") do %> 
                <p><%= label_tag(:text_val, "Enter your email:") %> 
                <%= text_field_tag(:text_val) %></p>

                <p><%= label_tag(:text_val, "Enter your password:") %> 
                <%= password_field_tag(:password) %></p>
                <%= submit_tag("Submit") %>
                <% end %>
            </div>
        </section><!-- /#content --> 